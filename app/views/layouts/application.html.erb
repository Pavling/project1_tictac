<!DOCTYPE html>
<html>
<head>
  <title>Tictacappv1</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="navbar">
    <div class="navbar-inner">
      <a class="brand" href="#">Tic Tac App</a>
      <ul class="nav">
        <li><%= link_to('Home', home_path) %></li>
        <li><%= link_to('New Game', new_game_path) %></li>
        <li><%= link_to('Leaderboard', high_scores_path) %></li>
        <li><%= link_to('Games Archive', games_path) %></li>
        <li> <%= link_to('Users', users_path) %></li>
          <% if current_user %>
            <li><%= link_to "Logout #{current_user.username}", session_path(session), method: :delete, data: {confirm: "Are you sure?"} %></li>
           <% else %>
            <li><%= link_to 'Please login', login_path %></li>
            <li><%= link_to('New User', new_user_path) %></li>
          <% end %>
    </div>
  </div>
    </ul>
  <% flash.each do |name, message| %>
    <div class="flash-message flash-message-<%= name %> alert">
      <%= message %>
    </div>
  <% end %>
<%= yield %>
</body>
</html>
